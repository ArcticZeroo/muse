{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "lib": ["ESNext"],
    "types": ["node"],
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"]
}
